<main>
    <div class="container-fluid">

        <div class="row mb-3">
            <div class="col-3">
                <a href="/create-pokemon" class="btn btn-outline-success">Create a new pokemon</a>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 mb-3">
            {{#if hasPokemon}}
                {{#each pokemons as |Pokemon|}}
                    <div class="col mb-4">
                        <div class="card shadow-sm">
                           <img class="bd-placeholder-img card-img-top img-product-size" src="{{Pokemon.picture}}"/>
                            <div class="card-body">
                                <h3>{{Pokemon.name}}</h3>
                                <p class="card-text">{{Pokemon.Region.dataValues.name}}</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <fieldset>
                                        <small class="text-muted">{{Pokemon.Type.dataValues.name}}</small>                      
                                    </fieldset>
                                    <div class="">
                                        <a href="/edit-pokemon/{{Pokemon.id}}?edit=true" class="btn btn-sm btn-outline-primary">Edit</a>
                                        <form class="form-inline" method="POST" action="/delete-pokemon" id="form-delete">
                                            <input type="hidden" name="pokemonId" value="{{Pokemon.id}}">
                                            <button type="submit" id="delete-pokemon" class="btn btn-sm btn-outline-danger">Delete</button>
                                        </form>
                                    </div>
                                </div>
                            </div> 
                        </div>
                    </div> 
                {{/each}}
            {{else}}
                <h2>NO POKEMONS ADDED</h2>
            {{/if}}
        </div>
    </div>
</main>

